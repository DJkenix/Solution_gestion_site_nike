<Window x:Class="PanelNikeStore.UpdateStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelNikeStore"
        mc:Ignorable="d"
        Title="Modifier le stock" 
        Height="400" Width="445"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Style pour les boutons modernes -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton d'annulation -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les boutons de contrôle (+ et -) -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CFD8DC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B0BEC5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style pour les labels d'information -->
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style pour les valeurs d'information -->
        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="25">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titre -->
                <RowDefinition Height="Auto"/>
                <!-- Informations sur la taille -->
                <RowDefinition Height="Auto"/>
                <!-- Informations sur le stock actuel -->
                <RowDefinition Height="Auto"/>
                <!-- Saisie du nouveau stock -->
                <RowDefinition Height="*"/>
                <!-- Espace flexible -->
                <RowDefinition Height="Auto"/>
                <!-- Boutons d'action -->
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Grid.Row="0" 
                       Text="Modifier le stock" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       Foreground="#212121"/>

            <!-- Informations sur la taille -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Taille" 
                           Style="{StaticResource InfoLabel}"/>
                <TextBlock x:Name="txtSize" 
                           Text="42" 
                           Style="{StaticResource InfoValue}"/>
            </StackPanel>

            <!-- Informations sur le stock actuel -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Stock actuel" 
                           Style="{StaticResource InfoLabel}"/>
                <TextBlock x:Name="txtCurrentStock" 
                           Text="10" 
                           Style="{StaticResource InfoValue}"/>
            </StackPanel>

            <!-- Saisie du nouveau stock -->
            <StackPanel Grid.Row="3">
                <TextBlock Text="Nouveau stock" 
                           FontSize="14" 
                           Margin="0,0,0,8"
                           Foreground="#424242"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Bouton - -->
                        <ColumnDefinition Width="*"/>
                        <!-- TextBox -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Bouton + -->
                    </Grid.ColumnDefinitions>

                    <!-- Bouton Diminuer -->
                    <Button x:Name="btnDecrease" 
                            Grid.Column="0" 
                            Content="-" 
                            Style="{StaticResource ControlButton}"
                            Click="BtnDecrease_Click"/>

                    <!-- TextBox Stock -->
                    <TextBox x:Name="txtNewStock" 
                             Grid.Column="1"
                             Style="{StaticResource ModernTextBox}"
                             Margin="10,0"
                             TextAlignment="Center"
                             PreviewTextInput="TxtNewStock_PreviewTextInput"/>

                    <!-- Bouton Augmenter -->
                    <Button x:Name="btnIncrease" 
                            Grid.Column="2" 
                            Content="+" 
                            Style="{StaticResource ControlButton}"
                            Click="BtnIncrease_Click"/>
                </Grid>
            </StackPanel>

            <!-- Boutons d'action -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Annuler -->
                <Button x:Name="btnCancel" 
                        Grid.Column="0" 
                        Content="Annuler" 
                        Style="{StaticResource CancelButton}"
                        Margin="0,0,5,0"
                        Click="BtnCancel_Click"/>

                <!-- Bouton Confirmer -->
                <Button x:Name="btnConfirm" 
                        Grid.Column="1" 
                        Content="Confirmer" 
                        Style="{StaticResource ModernButton}"
                        Margin="5,0,0,0"
                        Click="BtnConfirm_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>