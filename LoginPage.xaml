<Window x:Class="PanelNikeStore.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Page de connexion" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <!-- Fond clair gris-beige -->

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="30" Width="350" Height="320"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#D3D3D3" BorderThickness="1">
            <!-- Légère bordure grise pour propreté -->

            <StackPanel>
                <TextBlock Text="Connexion" FontSize="22" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Email :" Foreground="#555" FontSize="14" Margin="0,0,0,5"/>
                <Border Background="#F0F0F0" CornerRadius="5" Padding="5" Width="250" Height="35">
                    <TextBox x:Name="txtEmail" Background="Transparent" Foreground="Black"
                             BorderThickness="0" FontSize="14"/>
                </Border>

                <TextBlock Text="Mot de passe :" Foreground="#555" FontSize="14" Margin="0,15,0,5"/>
                <Border Background="#F0F0F0" CornerRadius="5" Padding="5" Width="250" Height="35">
                    <PasswordBox x:Name="txtPassword" Background="Transparent" Foreground="Black"
                                 BorderThickness="0" FontSize="14"/>
                </Border>

                <Border Background="#4A90E2" CornerRadius="5" Width="250" Height="40" Margin="0,25,0,0">
                    <Button Content="Connexion" Width="250" Height="40"
                            Background="Transparent" Foreground="White"
                            FontSize="14" FontWeight="Bold" Cursor="Hand"
                            BorderThickness="0" Click="Login_Click"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
