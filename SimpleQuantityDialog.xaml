<Window x:Class="PanelNikeStore.SimpleQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier la quantité" Height="220" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Informations sur le produit -->
        <TextBlock x:Name="txtProductInfo" Grid.Row="0" 
                   TextWrapping="Wrap" FontSize="14"/>

        <!-- Contrôle de quantité -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Bouton de diminution -->
            <Button x:Name="btnDecrease" Grid.Column="0" Content="-" Width="30" Height="30"
                    FontWeight="Bold" FontSize="16" Click="BtnDecrease_Click"/>

            <!-- Champ de saisie de la quantité -->
            <TextBox x:Name="txtQuantity" Grid.Column="1" Margin="10,0"
                     PreviewTextInput="TxtQuantity_PreviewTextInput"
                     KeyDown="TxtQuantity_KeyDown"
                     TextAlignment="Center" FontSize="16" VerticalContentAlignment="Center"/>

            <!-- Bouton d'augmentation -->
            <Button x:Name="btnIncrease" Grid.Column="2" Content="+" Width="30" Height="30"
                    FontWeight="Bold" FontSize="16" Click="BtnIncrease_Click"/>
        </Grid>

        <!-- Boutons d'action -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnConfirm" Grid.Column="0" Content="Confirmer" 
                    Margin="0,0,5,0" Padding="10,5" Click="BtnConfirm_Click"/>
            <Button x:Name="btnCancel" Grid.Column="1" Content="Annuler" 
                    Margin="5,0,0,0" Padding="10,5" Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window>