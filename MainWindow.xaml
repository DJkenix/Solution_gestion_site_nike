<Window x:Class="PanelNikeStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelNikeStore"
        mc:Ignorable="d"
        Title="BullRun - Gestion Nike" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4">

    <Grid>
        <!-- En-tête -->
        <Border Background="White" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="Nike Management" FontSize="18" FontWeight="Bold" Foreground="#333"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="nike_logo.png" Width="100" Margin="0,0,0,10"/>

            <TextBlock Text="Gérez vos produits et clients facilement" FontSize="16"
                       Foreground="#555" TextAlignment="Center" Margin="0,0,0,20"/>

            <!-- Bouton de connexion stylisé -->
            <Border Background="#4A90E2" CornerRadius="5" Width="200" Height="45" Margin="0,10,0,0">
                <Button Content="Se connecter" Background="Transparent" Foreground="White"
                        FontSize="14" FontWeight="Bold" Cursor="Hand"
                        BorderThickness="0" Click="Redirection_To_Login_Click"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
