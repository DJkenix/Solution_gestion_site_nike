<UserControl x:Class="PanelNikeStore.KPISectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PanelNikeStore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource WindowBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre du tableau de bord -->
        <TextBlock Grid.Row="0" Text="Tableau de bord" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                  Foreground="{DynamicResource PrimaryText}"/>

        <!-- Contenu principal du tableau de bord -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Rangée de KPI principaux -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- KPI 1: Utilisateurs -->
                <Border Grid.Column="0" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Utilisateurs" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}"/>
                        <TextBlock Grid.Row="1" x:Name="txtUserCount" Text="123" FontSize="28" FontWeight="Bold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,10,0,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="+5%" Foreground="#4CAF50" FontWeight="SemiBold"/>
                            <TextBlock Text=" ce mois-ci" Foreground="{DynamicResource SecondaryText}" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- Bouton d'information -->
                        <Button x:Name="btnUserStatsInfo" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                               Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BtnUserStatsInfo_Click">
                            <TextBlock Text="ⓘ" FontSize="16" Foreground="{DynamicResource SecondaryText}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- KPI 2: Produits -->
                <Border Grid.Column="1" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Produits" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}"/>
                        <TextBlock Grid.Row="1" x:Name="txtProductCount" Text="45" FontSize="28" FontWeight="Bold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,10,0,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="+3" Foreground="#4CAF50" FontWeight="SemiBold"/>
                            <TextBlock Text=" nouveaux" Foreground="{DynamicResource SecondaryText}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- KPI 3: Commandes -->
                <Border Grid.Column="2" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Commandes" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}"/>
                        <TextBlock Grid.Row="1" x:Name="txtOrderCount" Text="78" FontSize="28" FontWeight="Bold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,10,0,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock x:Name="txtNewOrdersCount" Text="12" Foreground="#4CAF50" FontWeight="SemiBold"/>
                            <TextBlock Text=" aujourd'hui" Foreground="{DynamicResource SecondaryText}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- KPI 4: Revenu -->
                <Border Grid.Column="3" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Revenu" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}"/>
                        <TextBlock Grid.Row="1" x:Name="txtRevenue" Text="8 597 €" FontSize="28" FontWeight="Bold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,10,0,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="+12%" Foreground="#4CAF50" FontWeight="SemiBold"/>
                            <TextBlock Text=" vs mois dernier" Foreground="{DynamicResource SecondaryText}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Section: Commandes récentes et Alertes de stock -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Commandes récentes -->
                <Border Grid.Column="0" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Commandes récentes" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,10"/>

                        <!-- Replace the ListView for recent orders with this updated version -->
                        <ListView x:Name="lvRecentOrders" Grid.Row="1" BorderThickness="0" Background="Transparent">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="2"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="N°" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OrderId}" Foreground="{DynamicResource PrimaryText}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Client" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ClientName}" Foreground="{DynamicResource PrimaryText}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Date" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OrderDate}" Foreground="{DynamicResource PrimaryText}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Montant" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Amount}" Foreground="{DynamicResource PrimaryText}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Statut" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" CornerRadius="4" Padding="5,2">
                                                    <TextBlock Text="{Binding Status}" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Détails" Padding="8,3" Tag="{Binding OrderId}" Click="BtnOrderDetails_Click"
                                Background="{DynamicResource ControlBackground}" 
                                Foreground="{DynamicResource PrimaryText}"
                                BorderBrush="{DynamicResource BorderBrush}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.Resources>
                                <!-- Style for GridViewColumnHeader -->
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                </Style>
                            </ListView.Resources>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Alertes de stock -->
                <Border Grid.Column="1" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Alertes de stock" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,10"/>

                        <ListView x:Name="lvStockAlerts" Grid.Row="1" BorderThickness="0" Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF8E1" BorderBrush="#FFE0B2" BorderThickness="1" CornerRadius="4" Margin="0,2" Padding="10,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding AlertMessage}" Foreground="#FF6F00"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

            <!-- Section: Graphiques et statistiques -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Graphique des ventes -->
                <Border Grid.Column="0" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Titre du graphique -->
                        <TextBlock Grid.Row="0" Text="Ventes par mois" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="15,15,0,10"/>

                        <!-- Conteneur du graphique -->
                        <Border Grid.Row="1" Background="{DynamicResource ContentBackground}" BorderBrush="{DynamicResource BorderBrush}" 
                               BorderThickness="1" Margin="15,0,15,15" CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Zone du graphique -->
                                <Canvas x:Name="ChartCanvas" Grid.Row="0" Margin="30,15,15,5" Background="Transparent" ClipToBounds="True" Height="200"/>

                                <!-- Légende des mois -->
                                <Grid Grid.Row="1" Margin="15,5,15,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Étiquettes des mois -->
                                    <Border Grid.Column="0" Background="{DynamicResource ControlBackground}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" MinWidth="70" Margin="2,0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <TextBlock Text="Janvier" FontSize="11" Foreground="{DynamicResource SecondaryText}" FontWeight="Medium" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="1" Background="{DynamicResource ControlBackground}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" MinWidth="70" Margin="2,0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <TextBlock Text="Février" FontSize="11" Foreground="{DynamicResource SecondaryText}" FontWeight="Medium" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="2" Background="{DynamicResource ControlBackground}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" MinWidth="70" Margin="2,0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <TextBlock Text="Mars" FontSize="11" Foreground="{DynamicResource SecondaryText}" FontWeight="Medium" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="3" Background="{DynamicResource ControlBackground}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" MinWidth="70" Margin="2,0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <TextBlock Text="Avril" FontSize="11" Foreground="{DynamicResource SecondaryText}" FontWeight="Medium" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Top produits -->
                <Border Grid.Column="1" Background="{DynamicResource ContentBackground}" Margin="10" CornerRadius="10" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Top produits vendus" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,10"/>

                        <ListView x:Name="lvTopProducts" Grid.Row="1" BorderThickness="0" Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{DynamicResource ControlBackground}" Width="28" Height="28" 
                                            CornerRadius="14" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Rank}" FontSize="14" FontWeight="Bold" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource SecondaryText}"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock>
                                            <Run Text="{Binding ProductName}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}"/>
                                            <Run Text=" - " Foreground="{DynamicResource SecondaryText}"/>
                                            <Run Text="{Binding SalesCount}" Foreground="#2196F3" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Category}" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>