<Window x:Class="PanelNikeStore.ChangeProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélectionner un produit" 
        Width="500" 
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Sélectionner un produit" 
                   FontWeight="Bold" 
                   FontSize="18" 
                   Margin="0,0,0,20"/>

        <!-- Sélection de produit -->
        <TextBlock Grid.Row="1" 
                   Text="Produit:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,5"/>
        <ComboBox Grid.Row="2" 
                  x:Name="cmbProduct" 
                  Margin="0,0,0,15"
                  SelectionChanged="CmbProduct_SelectionChanged"/>

        <!-- Sélection de variante -->
        <TextBlock Grid.Row="3" 
                   Text="Variante:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,5"/>
        <ComboBox Grid.Row="4" 
                  x:Name="cmbVariant" 
                  Margin="0,0,0,15"
                  SelectionChanged="CmbVariant_SelectionChanged"/>

        <!-- Aperçu de l'image -->
        <Image Grid.Row="5" 
               x:Name="imgProduct" 
               Height="200" 
               Stretch="Uniform" 
               Margin="0,0,0,15"/>

        <!-- Sélection de taille -->
        <Grid Grid.Row="6" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Taille:" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbSize" 
                          SelectionChanged="CmbSize_SelectionChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Quantité:" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbQuantity"/>
            </StackPanel>
        </Grid>

        <!-- Boutons -->
        <StackPanel Grid.Row="9" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Annuler" 
                    Width="100" 
                    Margin="0,0,10,0" 
                    Click="BtnCancel_Click"/>
            <Button Content="Confirmer" 
                    Width="100" 
                    Background="#2196F3" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Click="BtnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>