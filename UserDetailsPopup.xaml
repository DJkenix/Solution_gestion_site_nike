<Window x:Class="PanelNikeStore.UserDetailsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détails de l'utilisateur" 
        Height="500" Width="650"
        MinHeight="500" MinWidth="650"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="txtUserName" 
                       Text="Détails de l'utilisateur" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock x:Name="txtUserRole"
                       Text="Rôle: Client"
                       FontSize="14"
                       Margin="0,5,0,0"
                       Foreground="#666666"/>
        </StackPanel>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Panneau gauche: Informations de base -->
                <Border Grid.Column="0"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,10,0"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Informations de base"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Identifiant -->
                        <TextBlock Text="Identifiant" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtIdentifiant" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Email -->
                        <TextBlock Text="Email" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtEmail" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Date de création -->
                        <TextBlock Text="Date de création" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtCreatedAt" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>
                    </StackPanel>
                </Border>

                <!-- Panneau droit: Détails personnels -->
                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="10,0,0,0"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Détails personnels"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Prénom -->
                        <TextBlock Text="Prénom" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtPrenom" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Nom -->
                        <TextBlock Text="Nom" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtNom" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Adresse -->
                        <TextBlock Text="Adresse" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtAdresse" 
                                   Text="-" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <!-- Ville -->
                        <TextBlock Text="Ville" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtVille" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Code postal -->
                        <TextBlock Text="Code postal" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtCodePostal" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Pays -->
                        <TextBlock Text="Pays" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtPays" 
                                   Text="-" 
                                   Margin="0,0,0,15"/>

                        <!-- Téléphone -->
                        <TextBlock Text="Téléphone" 
                                   FontWeight="SemiBold" 
                                   Foreground="#555555"/>
                        <TextBlock x:Name="txtTelephone" 
                                   Text="-" 
                                   Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Boutons d'action -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Espace vide à gauche -->
            <TextBlock Grid.Column="0"/>

            <!-- Bouton Modifier -->
            <Button Grid.Column="1" 
                    x:Name="btnModifier"
                    Content="Modifier" 
                    Height="45" 
                    Width="150"
                    Margin="0,0,10,0"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnModifier_Click"/>

            <!-- Bouton Fermer -->
            <Button Grid.Column="2" 
                    Content="Fermer" 
                    Height="45" 
                    Width="150"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnFermer_Click"/>
        </Grid>
    </Grid>
</Window>