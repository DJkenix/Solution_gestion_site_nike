<Window x:Class="PanelNikeStore.AddProductToOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un produit à la commande" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sélection du produit - Colonne gauche -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Produit -->
            <TextBlock Grid.Row="0" Text="Produit :" FontWeight="SemiBold"/>
            <ComboBox Grid.Row="2" x:Name="cmbProduct" 
                      SelectionChanged="CmbProduct_SelectionChanged"/>

            <!-- Variante -->
            <TextBlock Grid.Row="4" Text="Variante :" FontWeight="SemiBold"/>
            <ComboBox Grid.Row="6" x:Name="cmbVariant" 
                      SelectionChanged="CmbVariant_SelectionChanged"/>

            <!-- Taille -->
            <TextBlock Grid.Row="8" Text="Taille :" FontWeight="SemiBold"/>
            <ComboBox Grid.Row="10" x:Name="cmbSize" 
                      SelectionChanged="CmbSize_SelectionChanged"/>

            <!-- Quantité -->
            <TextBlock Grid.Row="12" Text="Quantité :" FontWeight="SemiBold"/>
            <ComboBox Grid.Row="14" x:Name="cmbQuantity" 
                      SelectionChanged="CmbQuantity_SelectionChanged"/>

            <!-- Boutons d'action -->
            <Grid Grid.Row="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="btnConfirm" Content="Ajouter" 
                        Margin="0,0,5,0" Padding="15,8" Click="BtnConfirm_Click"/>
                <Button Grid.Column="1" x:Name="btnCancel" Content="Annuler" 
                        Margin="5,0,0,0" Padding="15,8" Click="BtnCancel_Click"/>
            </Grid>
        </Grid>

        <!-- Aperçu du produit - Colonne droite -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Grid.Row="0" Text="Aperçu du produit" 
                       FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Center"/>

            <!-- Image -->
            <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1">
                <Image x:Name="imgProduct" Stretch="Uniform"/>
            </Border>

            <!-- Prix unitaire -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Prix unitaire : " FontWeight="SemiBold"/>
                <TextBlock x:Name="txtPrice" Text="0.00 €"/>
            </StackPanel>

            <!-- Ligne séparatrice -->
            <Border Grid.Row="6" Height="1" Background="#DDDDDD"/>

            <!-- Prix total -->
            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Prix total : " FontWeight="SemiBold"/>
                <TextBlock x:Name="txtTotalPrice" Text="0.00 €"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>