<UserControl x:Class="PanelNikeStore.StockManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PanelNikeStore"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <!-- Définir des resources pour le design modernisé -->
    <UserControl.Resources>
        <!-- Convertisseur pour les couleurs de stock -->
        <local:StockColorConverter x:Key="StockColorConverter"/>

        <!-- Style pour les boutons modernes -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton de recherche -->
        <Style x:Key="SearchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- Style pour les cartes produit -->
        <Style x:Key="ProductCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ContentBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Color="#20000000" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header avec titre et recherche -->
        <Grid Grid.Row="0" Background="{DynamicResource ContentBackground}" Margin="0,0,0,15">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" Color="#20000000"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre de la section -->
            <TextBlock Grid.Row="0" Text="GESTION DES STOCKS" 
                       FontSize="26" FontWeight="Bold" Margin="20,20,0,10"
                       Foreground="{DynamicResource PrimaryText}"/>

            <!-- Barre de recherche -->
            <Grid Grid.Row="1" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{DynamicResource ControlBackground}" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="4">
                    <TextBox x:Name="txtSearch" 
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="15,12"
                             FontSize="14"
                             TextChanged="TxtSearch_TextChanged"
                             VerticalContentAlignment="Center"
                             Text="Rechercher un produit..."
                             Foreground="{DynamicResource SecondaryText}">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <Button x:Name="btnSearch" 
                        Grid.Column="1" 
                        Content="Rechercher" 
                        Margin="10,0,0,0"
                        Style="{StaticResource SearchButton}"
                        Click="BtnSearch_Click"/>
            </Grid>
        </Grid>

        <!-- Contenu principal - Liste des produits -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ProductCard}" Width="350" Height="450">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="220"/>
                                    <!-- Taille de l'image -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Nom du produit -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Prix -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Stock -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Bouton -->
                                </Grid.RowDefinitions>

                                <!-- Image du produit -->
                                <Border Grid.Row="0" Background="{DynamicResource ControlBackground}" CornerRadius="8,8,0,0">
                                    <Image Stretch="Uniform" Margin="15">
                                        <Image.Source>
                                            <BitmapImage UriSource="{Binding ImageUrl}" 
                                                         DecodePixelWidth="300"
                                                         CacheOption="OnLoad"/>
                                        </Image.Source>
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#20000000"/>
                                        </Image.Effect>
                                    </Image>
                                </Border>

                                <!-- Nom du produit -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Margin="15,15,15,5"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource PrimaryText}"/>

                                <!-- Prix -->
                                <TextBlock Grid.Row="2" 
                                           Text="{Binding Price, StringFormat={}{0:0.00} €}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="15,0,15,10"
                                           Foreground="{DynamicResource AccentBrush}"/>

                                <!-- Indicateur de stock -->
                                <Grid Grid.Row="3" Margin="15,0,15,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="Stock: " 
                                               Margin="0,0,5,0"
                                               FontSize="14"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center"/>

                                    <Border Grid.Column="1" 
                                            Background="{Binding TotalStock, Converter={StaticResource StockColorConverter}}" 
                                            CornerRadius="4"
                                            Height="24">
                                        <TextBlock Text="{Binding TotalStock}" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>

                                <!-- Bouton de détails -->
                                <Button Grid.Row="4" 
                                        Content="Gérer les stocks" 
                                        Style="{StaticResource ModernButton}"
                                        Margin="15,0,15,15"
                                        Tag="{Binding Id}"
                                        Click="ViewProductDetails_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>