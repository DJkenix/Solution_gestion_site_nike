<UserControl x:Class="PanelNikeStore.ModifyOrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <!-- Titre principal -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Modification des Commandes" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Barre de recherche -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearchOrder" 
                     Grid.Column="0"
                     Height="35"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Margin="0,0,10,0"
                     GotFocus="TxtSearchOrder_GotFocus"
                     LostFocus="TxtSearchOrder_LostFocus"
                     KeyDown="TxtSearchOrder_KeyDown"/>

            <Button x:Name="btnSearchOrder" 
                    Grid.Column="1"
                    Content="Rechercher"
                    Height="35"
                    Padding="15,5"
                    Background="#111111"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnSearchOrder_Click"/>
        </Grid>

        <!-- Zone de contenu principal -->
        <Grid Grid.Row="2">
            <!-- Panneau de message par défaut -->
            <Border x:Name="DefaultMessagePanel" 
                    Background="#F5F5F5" 
                    CornerRadius="4" 
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Recherchez une commande" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Saisissez un numéro de commande ou un identifiant client pour afficher et modifier les informations"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#616161"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Panneau de sélection de commande -->
            <StackPanel x:Name="OrdersSelectionPanel" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Commandes du client : " FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtClientName" FontWeight="Bold"/>
                </StackPanel>

                <DataGrid x:Name="OrdersDataGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          Background="White"
                          BorderThickness="1"
                          BorderBrush="#E0E0E0"
                          RowHeight="40"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="N° de commande" Binding="{Binding id}" Width="100"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding commande_le, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Montant" Binding="{Binding montant_total, StringFormat=N2}" Width="100"/>
                        <DataGridTextColumn Header="Statut" Binding="{Binding statut}" Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Tag="{Binding id}"
                                            Click="BtnSelectOrder_Click"
                                            Width="32" 
                                            Height="32" 
                                            Margin="2" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            HorizontalAlignment="Center">
                                        <Grid>
                                            <TextBlock Text="👁️" 
                                                       FontSize="18" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="Retour à la recherche" 
                        Background="#EEEEEE"
                        Foreground="#333333"
                        BorderThickness="0"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        Margin="0,15,0,0"
                        Click="BtnBackToSearch_Click"/>
            </StackPanel>

            <!-- Panneau de détails de la commande -->
            <StackPanel x:Name="OrderDetailsPanel" Visibility="Collapsed">
                <!-- En-tête de la commande -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="txtOrderTitle" 
                                   FontSize="22" 
                                   FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock x:Name="txtOrderDate" 
                                       FontSize="14" 
                                       Foreground="#757575"/>
                            <TextBlock Text=" | " 
                                       FontSize="14" 
                                       Foreground="#757575"/>
                            <TextBlock x:Name="txtOrderClientId" 
                                       FontSize="14" 
                                       Foreground="#757575"/>
                        </StackPanel>
                        <Border x:Name="bdOrderStatus" 
                                CornerRadius="12"
                                Padding="8,2"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0">
                            <TextBlock x:Name="txtOrderStatus" 
                                       Foreground="White" 
                                       FontWeight="Medium" 
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="Retour à la recherche" 
                            Background="#EEEEEE"
                            Foreground="#333333"
                            BorderThickness="0"
                            Padding="10,5"
                            VerticalAlignment="Top"
                            Click="BtnBackToSearch_Click"/>
                </Grid>

                <!-- Message d'avertissement -->
                <TextBlock x:Name="txtModificationWarning" 
                           Foreground="#D32F2F" 
                           FontWeight="Medium" 
                           Background="#FFEBEE" 
                           Padding="10" 
                           Margin="0,0,0,15" 
                           Visibility="Collapsed"/>

                <!-- Liste des articles -->
                <TextBlock Text="Articles de la commande" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,15,0,10"/>

                <DataGrid x:Name="OrderItemsGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          Background="White"
                          BorderThickness="1"
                          BorderBrush="#E0E0E0"
                          RowHeight="40"
                          MaxHeight="300"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          AlternatingRowBackground="#F5F5F5"
                          Margin="0,0,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Produit" Binding="{Binding product_name}" Width="200"/>
                        <DataGridTextColumn Header="Variante" Binding="{Binding variant_name}" Width="120"/>
                        <DataGridTextColumn Header="Taille" Binding="{Binding size}" Width="80"/>
                        <DataGridTextColumn Header="Quantité" Binding="{Binding quantite}" Width="80"/>
                        <DataGridTextColumn Header="Prix unitaire" Binding="{Binding prix_achat, StringFormat=N2}" Width="100"/>
                        <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="À supprimer">
                                            <Setter Property="Foreground" Value="#C62828"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="Modifié">
                                            <Setter Property="Foreground" Value="#1565C0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="Nouveau">
                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Tag="{Binding detail_id}"
                                                Click="BtnChangeItem_Click"
                                                Margin="0,0,10,0"
                                                Width="32"
                                                Height="32"
                                                ToolTip="Modifier">
                                            <TextBlock Text="✏️" FontSize="16"/>
                                        </Button>
                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Tag="{Binding detail_id}"
                                                Click="BtnRemoveItem_Click"
                                                Width="32"
                                                Height="32"
                                                ToolTip="Supprimer">
                                            <TextBlock Text="🗑️" FontSize="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Total estimé -->
                <TextBlock x:Name="txtEstimatedTotal" 
                           FontWeight="SemiBold"
                           Foreground="#111111"
                           Margin="0,0,0,10"
                           Visibility="Collapsed"/>

                <!-- Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,30">
                    <Button x:Name="btnAddProduct" 
                            Content="Ajouter un produit" 
                            Background="#111111"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            Click="BtnAddProduct_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="btnSaveChanges" 
                            Content="Enregistrer les modifications" 
                            Background="#111111"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            Click="BtnSaveChanges_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="btnCancelChanges" 
                            Content="Annuler les modifications" 
                            Background="#FFEBEE"
                            Foreground="#C62828"
                            BorderThickness="0"
                            Padding="15,8"
                            Click="BtnCancelChanges_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>