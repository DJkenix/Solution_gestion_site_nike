<UserControl x:Class="PanelNikeStore.ProductManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PanelNikeStore"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Margin="0" Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MenuPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Barre de recherche -->
            <RowDefinition Height="*"/>
            <!-- Liste des produits -->
        </Grid.RowDefinitions>

        <!-- Titre de la section -->
        <Border Grid.Row="0" Background="{DynamicResource ContentBackground}" Margin="0,0,0,20">
            <Grid Margin="25,20">
                <TextBlock Text="GESTION DES PRODUITS" 
                          FontSize="26" 
                          FontWeight="Bold" 
                          Foreground="{DynamicResource PrimaryText}"/>
            </Grid>
        </Border>

        <!-- Barre de recherche -->
        <Border Grid.Row="1" Background="{DynamicResource ContentBackground}" Margin="0,0,0,20">
            <Grid Margin="25,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Rechercher un produit" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15" 
                          Foreground="{DynamicResource PrimaryText}"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                           Background="{DynamicResource ControlBackground}" 
                           BorderBrush="{DynamicResource BorderBrush}" 
                           BorderThickness="1">
                        <TextBox x:Name="txtSearchProduct" 
                                FontSize="16" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Margin="15,12"
                                VerticalContentAlignment="Center"
                                TextChanged="TxtSearchProduct_TextChanged" 
                                Foreground="{DynamicResource PrimaryText}">
                        </TextBox>
                    </Border>

                    <Button x:Name="btnSearchProduct" 
                           Grid.Column="1" 
                           Content="Rechercher" 
                           Style="{StaticResource SearchButton}" 
                           Margin="15,0,0,0"
                           Padding="20,12"
                           Click="BtnSearchProduct_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Liste des produits -->
        <Border Grid.Row="2" Background="{DynamicResource ContentBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- En-tête tableau -->
                <Grid Grid.Row="0" Background="{DynamicResource ControlBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <!-- Image -->
                        <ColumnDefinition Width="250"/>
                        <!-- Nom -->
                        <ColumnDefinition Width="120"/>
                        <!-- Prix -->
                        <ColumnDefinition Width="120"/>
                        <!-- Stock -->
                        <ColumnDefinition Width="120"/>
                        <!-- Type -->
                        <ColumnDefinition Width="*"/>
                        <!-- Actions -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Image" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="15,15"/>
                    <TextBlock Grid.Column="1" Text="Nom du produit" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="0,15"/>
                    <TextBlock Grid.Column="2" Text="Prix" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="0,15"/>
                    <TextBlock Grid.Column="3" Text="Stock total" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="0,15"/>
                    <TextBlock Grid.Column="4" Text="Catégorie" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="0,15"/>
                    <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" Margin="0,15,15,15"/>
                </Grid>

                <!-- Liste des produits -->
                <ListView x:Name="ProductsList" 
                         Grid.Row="1" 
                         BorderThickness="0" 
                         Background="Transparent" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="80">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <!-- Image -->
                                    <ColumnDefinition Width="250"/>
                                    <!-- Nom -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- Prix -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- Stock -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- Type -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Actions -->
                                </Grid.ColumnDefinitions>

                                <!-- Image du produit -->
                                <Border Grid.Column="0" Width="50" Height="50" Margin="10,0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="Uniform"/>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="#20000000" Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>

                                <!-- Nom du produit -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                             FontWeight="SemiBold" 
                                             Foreground="{DynamicResource PrimaryText}"/>
                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource SecondaryText}"/>
                                </StackPanel>

                                <!-- Prix -->
                                <TextBlock Grid.Column="2" 
                                         Text="{Binding Price, StringFormat='{}{0:N2} €'}" 
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryText}"/>

                                <!-- Stock -->
                                <TextBlock Grid.Column="3" 
                                         Text="{Binding TotalStock}" 
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryText}"/>

                                <!-- Type de produit -->
                                <TextBlock Grid.Column="4" 
                                         Text="{Binding ProductType}" 
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryText}"/>

                                <!-- Actions -->
                                <StackPanel Grid.Column="5" 
                                         Orientation="Horizontal" 
                                         VerticalAlignment="Center">
                                    <Button Content="Modifier" 
                                           Tag="{Binding Id}" 
                                           Click="BtnEditProduct_Click"
                                           Style="{StaticResource EditButton}"
                                           Margin="0,0,10,0"/>

                                    <Button Content="Supprimer" 
                                           Tag="{Binding Id}" 
                                           Click="BtnDeleteProduct_Click"
                                           Style="{StaticResource DeleteButton}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>